<!-- indexing configurations, maybe we can integrate search configurations
	here under a search tag -->
<entity-indexing-config>

    <!-- Each indexed entity can be configured separately -->
    <indexed-entity name="publication-filtered" source-type="Publication">

        <index-fields>
            <index-field name="type" source-field="type" type="keyword"/>
            <index-field name="doi" source-field="identifier.doi" type="keyword"/>
            <index-field name="title" source-field="title" type="text"/>
        </index-fields>

        <index-nested-entities>
            <indexed-entity name="author" source-type="Person" source-relation="Authorship">
                <index-fields>
                    <index-field name="name" source-field="name" filter="longest-string" filter-limit="1" type="text"/>
                    <index-field name="idlattes" source-field="identifier.lattes"/>
                </index-fields>
            </indexed-entity>
        </index-nested-entities>

    </indexed-entity>

    <indexed-entity name="patent" source-type="Patent">

        <index-fields>
            <index-field name="number" source-field="alternateIdentifier" filter="subfields-format" filter-subfields="country,number,kind"
                         filter-format="%s%s%s"/>

        </index-fields>

    </indexed-entity>


    <!-- Each indexed entity can be configured separately -->
    <indexed-entity name="person" source-type="Person">

        <index-fields>
            <index-field name="name" source-field="name"/>
            <index-field name="idlattes" source-field="identifier.lattes"/>
        </index-fields>


        <index-nested-entities>
            <indexed-entity name="publication" source-type="Publication" source-relation="Authorship">
                <index-fields>
                    <index-field name="type" source-field="type"/>
                    <index-field name="doi" source-field="identifier.doi"/>
                    <index-field name="title" source-field="title"/>
                </index-fields>
            </indexed-entity>
        </index-nested-entities>

    </indexed-entity>

</entity-indexing-config>