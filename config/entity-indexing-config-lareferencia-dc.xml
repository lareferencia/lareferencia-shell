<!-- indexing configurations, maybe we can integrate search configurations
	here under a search tag -->
<entity-indexing-config>

    <!-- Each indexed entity can be configured separately -->
    <indexed-entity name="publication" source-type="Publication">

        <index-fields>
            <index-field name="type" source-field="dc.type" type="keyword"/>
            <index-field name="title" source-field="dc.title" type="text"/>
            <index-field name="description" source-field="dc.description" type="text"/>
            <index-field name="creator" source-field="dc.creator" type="keyword"/>
            <index-field name="subject" source-field="dc.subject" type="keyword"/>
            <index-field name="date" source-field="dc.date" type="keyword"/>
            <index-field name="identifier" source-field="dc.identifier" type="keyword"/>
            <index-field name="source" source-field="dc.source" type="keyword"/>
            <index-field name="rights" source-field="dc.rights" type="keyword"/>
            <index-field name="language" source-field="dc.language" type="keyword"/>

        </index-fields>

    </indexed-entity>

</entity-indexing-config>